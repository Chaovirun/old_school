<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="popup_window_animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="TimePickerDividerColor" parent="android:Widget.Material.TimePicker" tools:targetApi="lollipop">
        <item name="android:colorControlNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="BlurDialogFragment.Default.Animation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/default_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/default_dialog_out</item>
    </style>

    <style name="PresetLayoutButton">

        <item name="android:background">@drawable/background_selector_preset_button</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="PresetLayoutButton_ValueText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_time_preset_unit</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">
            @dimen/padding_side_title_text
        </item>
        <item name="android:paddingLeft">@dimen/padding_side_title_text</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">
            @dimen/padding_side_title_text
        </item>
        <item name="android:paddingRight">@dimen/padding_side_title_text</item>
    </style>

    <style name="PresetLayoutButton_UnitText">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_time_preset_unit</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingTop">0dp</item>

    </style>

</resources>
