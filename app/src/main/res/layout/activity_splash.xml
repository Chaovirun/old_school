<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/bizplay_logo"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_height="0dp">
        <LinearLayout
            android:id="@+id/ly_en"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/en_flag"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:text="@string/en_lang"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ly_ko"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ko_flag"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:text="@string/ko_lang"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ly_zh"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/zh_flag"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:text="@string/zh_lang"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ly_ja"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/jp_flag"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:text="@string/jp_lang"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </GridLayout>





</LinearLayout>